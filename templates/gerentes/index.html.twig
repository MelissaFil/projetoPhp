{% extends 'base.html.twig' %}

{% block title %}Gerentes index{% endblock %}

{% block body %}
    
    <div class="card">
        <div class="card-header d-flex flex-row justify-content-between">
            <h5>Gerentes</h5>
            <a class="btn btn-primary"  data-toggle="modal" data-target="#exampleModal" >Novo gerente</a>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Cpf</th>
                        <th>Telefone</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for gerente in gerentes %}
                    <tr>
                        <td>{{ gerente.id }}</td>
                        <td>{{ gerente.nome }}</td>
                        <td>{{ gerente.cpf }}</td>
                        <td>{{ gerente.telefone }}</td>
                        <td>
                            <a href="{{ path('app_gerentes_show', {'id': gerente.id}) }}"><i class="fa-solid fa-eye"></i></a>
                            <a href="{{ path('app_gerentes_edit', {'id': gerente.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    
    
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Gerentes</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{ include('gerentes/_form.html.twig') }}
        </div>
    </div>
    </div>
    
{% endblock %}
